<div class="container">
  <div class="columns is-multiline is-mobile">
    <div class="column is-one-third is-centered">
      <div class="card">
        <div class="card-content">
          <h2 class="title">
            <% if cupcake.image.present? %>
              <%= image_tag cupcake.image.thumb %>
            <% end%>
            <%= cupcake.name  %>
          </h2>
          <p>
            <strong>Category:</strong>
            <%= cupcake.category.name %>
          </p><br>
          <% if show_description %>
            <strong>Description:</strong>
            <%= cupcake.description %>
          <% end %>
          <footer class="card-footer">
            <% if show_details_link %>
              <div class="card-footer-item"><%= link_to 'View Cupcake', cupcake %></div>
            <% end %>
            <a href="#" class="card-footer-item">Add to cart</a>
          </footer>
        </div>
      </div>
    </div>
  </div>
</div>